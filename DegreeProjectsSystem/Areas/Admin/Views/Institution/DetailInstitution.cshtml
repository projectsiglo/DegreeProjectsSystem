@model DegreeProjectsSystem.Models.ViewModels.InstitutionViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Detalle Institución";
}

<div class="container-fluid">
    <div class="container-detail mt-3">
        <div class="card-detail ml-1">
            <div class="col-12 border-bottom">
                <h2 class="text-primary">@title</h2>
            </div>
            <div class="col-12 pt-3 ml-md-auto">
                <div class="form-row ml-0">
                    <div class="form-group col-md-6">
                        <span class="bold-label">
                            <label asp-for="Institution.Name"></label>
                        </span>
                        <input asp-for="Institution.Name" disabled class="form-control" />
                    </div>
                    <div class="form-group col-md-6">
                        <span class="bold-label">
                            <label asp-for="Institution.Nit"></label>
                        </span>
                        <input asp-for="Institution.Nit" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-row ml-0">
                    <div class="form-group col-md-6">
                        <span class="bold-label">
                            Tipo Institución
                        </span>
                    </div>
                    @Html.DropDownListFor(it => it.Institution.InstitutionTypeId, Model.InstitutionTypeList, "Seleccione una Institución....",
                      new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="form-row ml-0">
                    <div class="form-group col-md-6">
                        <span class="bold-label">
                            <label class="mt-3" asp-for="Institution.Phone"></label>
                        </span>
                        <input asp-for="Institution.Phone" disabled class="form-control" />
                    </div>
                    <div class="form-group col-md-6">
                        <span class="bold-label">
                            <label class="mt-3" asp-for="Institution.Email"></label>
                        </span>
                        <input asp-for="Institution.Email" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-row ml-0">
                    <div class="form-group col-md-6">
                        <span class="bold-label">
                            <label asp-for="Institution.Observations"></label>
                        </span>
                        <textarea asp-for="Institution.Observations" disabled class="form-control" rows="4">
                     </textarea>
                    </div>
                    <div class="form-group col-md-6">
                        <span class="bold-label">
                            <label asp-for="Institution.Active"></label>
                        </span>
                        <select asp-for="Institution.Active" class="form-control" disabled>
                            <option value=true>Activo</option>
                            <option value=false>Inactivo</option>
                        </select>
                    </div>

                </div>
                <div class="form-group row ml-0">
                    <div class="col-8 offset-2">
                        <div class="row">
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">
                                    <i class="far fa-hand-point-left"><span class="ml-1 font-menu">Regresar</span></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>