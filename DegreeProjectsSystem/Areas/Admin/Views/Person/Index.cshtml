@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary mt-5"> Lista De Personas </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary mt-5" asp-action="InsertOrUpdatePerson"> <i class="fas fa-plus"></i> Crear Persona</a>
    </div>
</div>

<br />

<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%;">
        <thead class="">
            <tr class="table-info text-center">
                <th>Identificación</th>
                <th>Tipo Documento</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Departamento</th>
                <th>Ciudad</th>
                <th>Dirección</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/person.js"></script>
}