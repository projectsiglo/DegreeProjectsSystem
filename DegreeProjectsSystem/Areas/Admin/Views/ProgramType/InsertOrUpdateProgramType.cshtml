@model DegreeProjectsSystem.Models.ViewModels.ProgramTypeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Crear Tipo De Programa";
}

<form method="post">
    <div class="row p-3 border-0">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    @if (Model.ProgramType.Id != 0)
    {
        // Actualizar
        title = "Actualizar Tipo De Programa";
        <input type="hidden" asp-for="ProgramType.Id" />
    }

    <div class="col-12 border-bottom mt-5">
        <h2 class="text-primary">@title</h2>
    </div>
    <div class="col-8 pt-4">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ProgramType.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="ProgramType.Name" class="form-control" placeholder="Ejemplo: Maestría" />
                <span asp-validation-for="ProgramType.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                Mível Educativo:
            </div>
            <div class="col-8">
                @Html.DropDownListFor(ne => ne.ProgramType.EducationLevelId, Model.EducationLevelList, 
                "Seleccione un nível educativo....",
                new {@class ="form-control"}) 
                <span asp-validation-for="ProgramType.EducationLevelId" class="text-danger"></span>
            </div>
        </div>



        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ProgramType.Active"></label>
            </div>
            <div class="col-4">
                <select asp-for="ProgramType.Active" class="form-control">
                    <option value=true>Activo</option>
                    <option value=false>Inactivo</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-8 offset-4">
                @if (Model.ProgramType.Id != 0)
                {
                    <partial name="_ButtonsUpdateAndReturn" model="Model.ProgramType.Id" />
                }
                else
                {
                    <partial name="_ButtonsCreateAndReturn" />
                }
            </div>
        </div>

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


