@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary mt-5"> Lista De Reconocimientos </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary mt-5" asp-action="InsertOrUpdateRecognition"> <i class="fas fa-plus"></i> Crear Reconocimiento</a>
    </div>
</div>

<br />

<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%;">
        <thead class="">
            <tr class="table-info text-center">
                <th>Reconocimiento</th>
                <th>Nível Educativo</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/recognition.js"></script>
}